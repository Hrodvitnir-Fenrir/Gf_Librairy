<div id="modal-<%= type.id %>" class="modal">
	<div class="modal-content">
		<div class="modal-header">
			<h2>Ajouter un livre (<%= type.title %>)</h2>
			<span class="close">&times;</span>
		</div>

		<form id="accForm-<%= type.id %>">
			<div class="flex-row">
				<input name="ean" placeholder="Code EAN" required class="flex-half">
				<button type="button" class="flex-half fetch" disabled>Récupérer les infos en ligne</button>
			</div>

			<div class="section-title">INFORMATIONS PRINCIPALES</div>
			<div class="flex-row">
				<input name="title" placeholder="Titre" required class="flex-half">
				<input name="image" placeholder="URL image" required class="flex-half">
			</div>
			<div class="flex-row">
				<input name="tome" type="number" placeholder="Tome" class="flex-half">
				<input name="date" placeholder="Date" required class="flex-half">
				<input name="age" placeholder="Age" type="number" class="flex-half">

			</div>
			<div class="flex-row">
				<input name="author" placeholder="Auteur" required>
				<input name="editor" placeholder="Editeur" required>
			</div>
			<input name="link" placeholder="URL livre">

			<div class="section-title">CLASSIFICATION</div>
			<div class="flex-row">
				<% if (type.sections !=null) { %>
				<input name="section" placeholder="Section" list="section-options-<%= type.id %>" class="flex-half" required>
				<datalist id="section-options-<%= type.id %>">
					<% type.sections.forEach(function(section){ %>
					<option value="<%= section %>">
						<% }); %>
				</datalist>
				<% } %>

				<% if (type.genres !=null) { %>
				<input name="genre" placeholder="Genre" list="genre-options-<%= type.id %>" class="flex-half" required>
				<datalist id="genre-options-<%= type.id %>">
					<% type.genres.forEach(function(genre){ %>
					<option value="<%= genre %>">
						<% }); %>
				</datalist>
				<% } %>
			</div>
			<div class="flex-row">
				<% if (type.deweyClass !=null) { %>
				<input name="deweyClass" placeholder="Classe Dewey" list="dewey-class-options-<%= type.id %>" class="flex-half" required>
				<datalist id="dewey-class-options-<%= type.id %>">
					<% type.deweyClass.forEach(function(deweyClass){ %>
					<option value="<%= deweyClass %>">
						<% }); %>
				</datalist>
				<% } %>

				<% if (type.deweyClass !=null) { %>
				<input name="coteDewey" placeholder="Cote Dewey" class="flex-half" required>
				<% } %>
			</div>

			<% if (type.tthematic !=null) { %>
			<input name="tthematic" placeholder="Tématique" list="tthematic-options-<%= type.id %>" class="flex-full" required>
			<datalist id="tthematic-options-<%= type.id %>">
				<% type.thematic.forEach(function(thematic){ %>
				<option value="<%= thematic %>">
					<% }); %>
			</datalist>
			<% } %>

			<div class="flex-row">
				<% if (type.coteSections !=null) { %>
				<input name="coteSection" placeholder="Cote section" list="cote-section-options-<%= type.id %>" class="flex-half" required>
				<datalist id="cote-section-options-<%= type.id %>">
					<% type.coteSections.forEach(function(coteSection){ %>
					<option value="<%= coteSection %>">
						<% }); %>
				</datalist>
				<% } %>

				<input name="coteName" placeholder="Cote Nom" list="cote-name-options-<%= type.id %>" class="flex-half" required>
			</div>

			<div class="section-title">ACQUISITION</div>
			<div class="flex-row">
				<input name="provider" placeholder="Fournisseur" list="provider-options-<%= type.id %>" class="flex-half" required>
				<datalist id="provider-options-<%= type.id %>">
					<option value="Maison de la presse">
					<option value="Librairie place au herbes">
				</datalist>
				<select name="status" class="flex-half" required>
					<option disabled selected value>-- Status --</option>
					<option value="acquired">Acquis</option>
					<option value="nonAcquired">Non acquis</option>
					<option value="onList">Sur liste d'acquisition</option>
					<option value="onShiping">En cours de livraison</option>
					<option value="equipment">Equipement</option>
					<option value="notAvailable">Non disponible</option>
				</select>
			</div>
			<div class="flex-row">
				<input name="price" placeholder="Prix (€)" type="number" class="flex-half" required>

				<% if (type.format !=null) { %>
				<input name="format" placeholder="Format" list="format-options-<%= type.id %>" class="flex-half" required>
				<datalist id="format-options-<%= type.id %>">
					<% type.format.forEach(function(format){ %>
					<option value="<%= format %>">
						<% }); %>
				</datalist>
				<% } %>
			</div>

			<div class="btn-group">
				<button type="submit" class="flex-half validate">Valider</button>
				<button type="button" class="flex-half cancel close">Annuler</button>
			</div>
		</form>
	</div>
</div>